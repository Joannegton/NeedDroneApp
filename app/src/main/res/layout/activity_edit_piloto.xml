<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.edicao.EditPilotoActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_login"
    android:backgroundTint="@color/gray"
    android:orientation="vertical"
    android:padding="16dp">
    <!-- #6792C7, #0E0E2C, #D9D9D9 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Atualizar Perfil"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />
    
    <ImageButton
        android:id="@+id/user_img"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#D9D9D9"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/updt_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/blueFirst"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Selecione imagem" />

    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Nome *"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:background="@drawable/container_edit_text"
        android:padding="5dp"
        android:inputType="text" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/textField"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Biografia:">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/biografia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/container_edit_text"/>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="E-mail *"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:background="@drawable/container_edit_text"
        android:padding="5dp"
        android:backgroundTint="#2D838383"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:enabled="false"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefone *"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:background="@drawable/container_edit_text"
        android:padding="5dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="11940028922"/>

    <CheckBox
        android:id="@+id/whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatsapp"
        android:textColor="@color/black"
        android:textSize="@dimen/texts"
        android:layout_marginHorizontal="10dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Rua/N°"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/rua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:textColor="@color/black"
        android:background="@drawable/container_edit_text"
        android:padding="5dp"
        android:inputType="text"
        android:hint="Rua da Aurora, 665" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cidade - Estado"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/cidadeEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@drawable/container_edit_text"
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Guarulhos - SP" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CEP"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@drawable/container_edit_text"
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:inputType="number"
        android:hint="07470390" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Qualificação e Experiência"
        android:textColor="@color/black"
        android:background="#F1F0F0"
        android:paddingHorizontal="30dp"
        android:textSize="25sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Licença de Pilotagem"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/licenca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:background="@drawable/container_edit_text"
        android:padding="5dp"
        android:ems="10"
        android:backgroundTint="#2D838383"
        android:enabled="false" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempo de experiência: ..."
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/experiencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@drawable/container_edit_text"
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="3 anos e meio"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Especialização"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/especializacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/container_edit_text"
        android:padding="5dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Casamentos, Inspeção agricola"/>

    <Button
        android:id="@+id/btnAtualizar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Atualizar"
        android:layout_gravity="center"
        android:backgroundTint="@color/blueFirst"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"/>
</LinearLayout>

</ScrollView>