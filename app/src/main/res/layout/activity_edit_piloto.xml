<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.edicao.EditPilotoActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/gray">
    <!-- #6792C7, #0E0E2C, #D9D9D9 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueFirst"
        android:gravity="center"
        android:padding="15dp"
        android:text="Atualizar Perfil"
        android:textColor="@color/white"
        android:textSize="25sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/container_login"
    android:layout_marginTop="16dp">
    <ImageButton
        android:id="@+id/user_img"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#D9D9D9"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/user_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/blueFirst"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="Selecione uma imagem" />

    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:text="Nome *"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:text="E-mail *"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="nome123@gmail.com"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/textField"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Biografia:">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefone *"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:ems="10"
        android:inputType="phone"
        android:hint="11940028922"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:text="Rua/N°"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/rua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:textColor="#222"
        android:inputType="text"
        android:hint="Rua da Aurora, 665" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="#222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: ..."
            />
        <Spinner
            android:id="@+id/spEstado"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="#222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/opcoes"
            android:textSize="@dimen/texts"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="#222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cidade: ..."
            android:textSize="16sp"/>
        <Spinner
            android:id="@+id/spCidade"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="#222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/opcoes"
            android:textSize="@dimen/texts"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CEP"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:inputType="number"
        android:hint="07470390" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Qualificação e Experiência"
        android:textColor="#222"
        android:background="#D9D9D9"
        android:paddingHorizontal="30dp"
        android:textSize="25sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:textColor="#222"
        android:layout_height="wrap_content"
        android:text="Licença de Pilotagem"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/licenca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempo de experiência: ..."
        android:textSize="16sp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Especialização"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/especializacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="foto aérea, inspe de infra, agricultura"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Atualizar"
        android:layout_gravity="center"
        android:backgroundTint="@color/blueFirst"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"/>
</LinearLayout>

</LinearLayout>
</ScrollView>