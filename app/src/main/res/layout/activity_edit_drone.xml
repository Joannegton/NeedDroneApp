<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.edicao.EditDroneActivity"
    android:padding="10dp">
    <!-- #6792C7, #0E0E2C, #D9D9D9 -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/container_login"
        android:backgroundTint="@color/gray"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/cadastro_de_drone"
            android:textSize="25sp" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="#222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome/Modelo:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"
            android:ems="10"
            android:background="@drawable/container_edit_text"
            android:inputType="text"
            android:hint="Moniss YLR/C"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="#222"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo:"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <Spinner
                    android:id="@+id/spTipo"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipoDrone"
                    android:textSize="@dimen/texts"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/container_border"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Autonomia:"
                    android:textColor="#222"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spAutonomia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/autonomia"
                    android:textColor="@color/black"
                    android:background="@drawable/container_border"
                    android:backgroundTint="@color/white"
                    android:padding="5dp"
                    android:textSize="@dimen/texts" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="#222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área de cobertura:"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <Spinner
                    android:id="@+id/spAreaCobertura"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/container_border"
                    android:backgroundTint="@color/white"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/areaCobertura"
                    android:textSize="@dimen/texts"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="#222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qualidade de Imagem:"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/spQualidadeImagem"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/container_border"
                    android:backgroundTint="@color/white"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/qualidadeDrone"
                    android:textSize="@dimen/texts"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="#222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <Spinner
                    android:id="@+id/spStatus"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/container_border"
                    android:backgroundTint="@color/white"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/status"
                    android:textSize="@dimen/texts"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <CheckBox
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/checkBox"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#222"
                    android:text="Sobreposição de imagem" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingVertical="10dp">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnAtualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_gravity="center"
                android:backgroundTint="@color/blueFirst"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnExcluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluir"
                android:layout_gravity="center"
                android:backgroundTint="#F30000"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>