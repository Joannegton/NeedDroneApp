<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.cadastros.CriarProjetoActivity"
    android:padding="16dp">
    <!-- #6792C7, #0E0E2C, #D9D9D9 -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_login"
    android:backgroundTint="@color/gray"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Detalhes do Projeto"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título:"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="@dimen/texts"
        android:background="@drawable/container_edit_text"
        android:hint="@string/filmagem_de_casamento"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/txtDescricao"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição:">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/container_edit_text"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rua:"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/editTextRua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="@dimen/texts"
        android:background="@drawable/container_edit_text"
        android:hint="Av. dos ilhados, 10052"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cidade - Estado:"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/editTextCidadeEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="@dimen/texts"
        android:background="@drawable/container_edit_text"
        android:hint="Mairiporã - SP"/>


    <Button
        android:id="@+id/btnSelectDateTime"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar Data e Hora"
        android:layout_gravity="center"
        android:backgroundTint="@color/blueFirst"/>
    <TextView
        android:layout_marginHorizontal="10dp"
        android:id="@+id/TextViewDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3dp"
        android:textSize="@dimen/texts"
        android:textColor="@color/black"
        android:text="Data: 25/05/2022"
        android:gravity="center"/>
    <TextView
        android:layout_marginHorizontal="10dp"
        android:id="@+id/TextViewHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3dp"
        android:textSize="@dimen/texts"
        android:textColor="@color/black"
        android:text="Horário: 15:00"
        android:gravity="center"/>



    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_gravity="center"
        android:backgroundTint="#6792C7"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"/>

</LinearLayout>



</LinearLayout>