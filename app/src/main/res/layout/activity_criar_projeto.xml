<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.cadastros.CriarDroneActivity"
    android:padding="10dp"
    android:background="#EDEDED">
    <!-- #6792C7, #0E0E2C, #D9D9D9 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6792C7"
        android:gravity="center"
        android:padding="10dp"
        android:text="Detalhes do Projeto"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título:"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/especializacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:inputType="text" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/textField"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição:">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de Drone: ... "
        android:textSize="16sp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qualidade da Imagem: ..."
        android:textSize="16sp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Área de Cobertura Desejada: ..."
        android:textSize="16sp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Prazo de Entrega:"
        android:inputType="date" />

    <CheckBox
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="16sp"
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:text="Sobreposição de imagem" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_gravity="center"
        android:backgroundTint="#6792C7"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"/>

</LinearLayout>